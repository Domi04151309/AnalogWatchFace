<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.MyTheme" parent="Theme.Wearable">
        <item name="android:colorPrimary">@color/primary_color</item>
        <item name="android:colorPrimaryDark">@color/primary_color_dark</item>
        <item name="android:colorAccent">@color/accent_color</item>
    </style>

    <style name="SwitchStyle" parent="Widget.Wear.RoundSwitch">
        <item name="android:padding">@dimen/activity_config_padding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:switchPadding">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="ButtonStyle" parent="Widget.WearDiag.Button">
        <item name="android:padding">@dimen/activity_config_padding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="TextStyle" parent="Widget.WearDiag.TextView">
        <item name="android:padding">@dimen/activity_config_padding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>